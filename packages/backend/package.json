{
  "name": "@authvital/backend",
  "version": "1.0.0",
  "description": "B2B Identity Provider & Billing Platform API",
  "main": "dist/main.js",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,json,md,yml,yaml}\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:silent": "jest --silent",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "prepare": "command -v lefthook >/dev/null 2>&1 && lefthook install || echo 'lefthook not installed, skipping prepare'",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:seed": "prisma db seed",
    "recover-admin": "ts-node src/cli/recover-admin.ts"
  },
  "dependencies": {
    "@authvital/shared": "*",
    "@nestjs/common": "^11.0.0",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "@nestjs/schedule": "^5.0.0",
    "@nestjs/serve-static": "^5.0.0",
    "@prisma/client": "^5.22.0",
    "@sendgrid/mail": "^8.1.6",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.7",
    "express": "^5.0.0",
    "jose": "^6.1.3",
    "otplib": "^12.0.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "qrcode": "^1.5.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/passport-jwt": "^3.0.8",
    "@types/qrcode": "^1.5.5",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.42.0",
    "jest": "^29.5.0",
    "lefthook": "^2.1.1",
    "prettier": "^3.8.1",
    "prisma": "^5.0.0",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "prisma": {
    "schema": "./prisma/schema",
    "seed": "ts-node prisma/seed.ts"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "auth/utils/extract-jwt.ts",
      "common/utils/redirect-uri.utils.ts",
      "config/env.validation.ts",
      "auth/guards/api-key.guard.ts",
      "auth/guards/jwt-auth.guard.ts",
      "auth/guards/optional-auth.guard.ts",
      "instance/guards/instance-api-key.guard.ts",
      "licensing/guards/tenant-permission.guard.ts",
      "authorization/constants/default-tenant-roles.ts",
      "authorization/decorators/require-permission.decorator.ts",
      "authorization/guards/permission.guard.ts",
      "authorization/guards/app-access.guard.ts",
      "tenants/guards/tenant-access.guard.ts",
      "super-admin/guards/super-admin.guard.ts",
      "oauth/oauth-token.guard.ts",
      "auth/decorators/current-user.decorator.ts",
      "licensing/decorators/jwt-tenant-id.decorator.ts",
      "auth/constants/generic-domains.ts",
      "authorization/constants/permissions.ts",
      "health/health.controller.ts",
      "oauth/m2m-auth.guard.ts",
      "instance/instance-api-key.service.ts",
      "auth/auth.service.ts",
      "auth/password-reset.service.ts",
      "auth/domain-verification.service.ts",
      "auth/email.service.ts",
      "prisma/prisma.service.ts"
    ],
    "coverageDirectory": "../coverage",
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "testEnvironment": "node"
  }
}
